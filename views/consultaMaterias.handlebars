<div class="container text-center">
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-white">
            &nbsp;
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-white">
            <p class="text-start fs-5">Consultar - matérias cadastradas</p>
            <p class="text-start fs-6">Sistema Utilizado para controle de faltas</p>
            <p>
            <div class="container text-center">
                <div class="row bg-secondary">
                    <div class="col text-light">
                        Sigla
                    </div>
                    <div class="col text-light">
                        Nome
                    </div>
                    <div class="col text-light">
                        Dia da Semana
                    </div>
                    <div class="col text-light">
                        Quant. Aulas
                    </div>
                    <div class="col text-light">
                        Quant. Faltas
                    </div>
                    <div class="col text-light">
                        Ações
                    </div>
                </div>
                <div class="row">
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                </div>
                {{#each data}}
                    <div class="row">
                        <div class="col">
                            {{sigla}}
                        </div>
                        <div class="col">
                            {{nome}}
                        </div>
                        <div class="col">
                            {{#switchDia dia }}
                            {{/switchDia}}
                        </div>
                        <div class="col">
                            {{quantAulas}}
                        </div>
                        <div class="col">
                            {{quantFaltas}}
                        </div>
                        <div class="col">
                            <button type="button" class="btn btn-secondary"><a href="/editar/{{id}}" style="color:inherit">Editar</a></button>
                            <button type="button" class="btn btn-secondary"><a href="/excluir/{{id}}/{{#ifExists sigla}}{{/ifExists}}" style="color:inherit">Excluir</a></button>
                        </div>
                    </div>
                    <div class="row">
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                </div>
                {{/each}}
            </div>
            </p>
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
    <div class="d-grid gap-2 col-6 mx-auto">
        <a href="/cadastro">
            <button class="btn btn-dark" type="button" >Adicionar matéria</button>
        </a>
    </div>
</div>